<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atguigu.spzx.order.mapper.OrderInfoMapper">
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into order_info (id,
                                user_id,
                                nick_name,
                                order_no,
                                coupon_id,
                                total_amount,
                                coupon_amount,
                                original_total_amount,
                                feight_fee,
                                pay_type,
                                order_status,
                                receiver_name,
                                receiver_phone,
                                receiver_tag_name,
                                receiver_province,
                                receiver_city,
                                receiver_district,
                                receiver_address,
                                payment_time,
                                delivery_time,
                                receive_time,
                                remark,
                                cancel_time,
                                cancel_reason)
        values (#{id},
                #{userId},
                #{nickName},
                #{orderNo},
                #{couponId},
                #{totalAmount},
                #{couponAmount},
                #{originalTotalAmount},
                #{feightFee},
                #{payType},
                #{orderStatus},
                #{receiverName},
                #{receiverPhone},
                #{receiverTagName},
                #{receiverProvince},
                #{receiverCity},
                #{receiverDistrict},
                #{receiverAddress},
                #{paymentTime},
                #{deliveryTime},
                #{receiveTime},
                #{remark},
                #{cancelTime},
                #{cancelReason})
    </insert>
    <select id="getOrderInfo" resultType="com.atguigu.spzx.model.entity.order.OrderInfo">
        select *
        from order_info
        where id = #{id}
    </select>
    <!--    根据用户id查询订单-->
    <select id="orderInfo" resultMap="myOrderMap">
        select
            from order_info
            <where>
                <if test="orderStatus ！= null">
                    and orderStatus = #{orderStatus}
                </if>
                    and userInfo_id = #{userInfoId}
            </where>
                 order by id desc
    </select>
    <resultMap id="myOrderMap" type="com.atguigu.spzx.model.entity.order.OrderInfo" autoMapping="true">
<!--        一对多的映射  collection
            多对一的映射  association
            property：指定哪个属性名来对应一对多中的多
            ofType：指定类型，有泛型就是泛型中的，没有就根据返回类型来定义
            select: 指定这个对应多的属性，调用接口的方法的全路径类名
            column: 将查询出的某个字段作为分布查询的sql的条件，及一是通过column,去找到多个
-->
            <collection property="orderItemList"
                        ofType="com.atguigu.spzx.model.entity.order.OrderItem"
                        select="com.atguigu.spzx.order.mapper.OrderItemMapper.getOrderItemByOrderId"
                        column="id"/>
    </resultMap>
</mapper>